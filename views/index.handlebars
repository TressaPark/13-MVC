<h1>Eat Da Burger!</h1>
<div class="container">
  <div class="row">
    <div class="col-md">
    </div class="todevour">

    <h2>Burgers to Devour!</h2>
    <ul> style = "list-style: none;">
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="col-md">
  <img class - "png">
  <img src="public/assets/image/veggieburger.png" style="width: 250px">
</div>
<div class="col-md">
  <div class> = "devoured">

    <h2>Burgers to Devour!</h2>

    <ul style="list-style: none">;
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
</div>
</div>

<div class="addburger">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="devoured">Devoured?</label><br>
      <input type="radio" name="devoured" value="1"> Devoured!<br>
      <input type="radio" name="devoured" value="0"> MMMMMMMM!
      <br>

      <button type="submit">Add Burger</button>
    </div>
</div>
</form>